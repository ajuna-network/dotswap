{
  "name": "dot-acp-ui",
  "private": true,
  "version": "0.0.1",
  "author": "MVP Workshop",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write ./src",
    "preview": "vite preview",
    "prepare": "husky",
    "commit": "cz",
    "test": "pnpm jest"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "pnpm prettier --write",
      "pnpm eslint --fix"
    ]
  },
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@paraspell/sdk": "^4.1.1",
    "@polkadot/api": "^10.12.1",
    "@polkadot/api-augment": "^10.9.1",
    "@polkadot/api-base": "^10.12.4",
    "@polkadot/apps-config": "^0.135.1",
    "@polkadot/extension-dapp": "^0.46.5",
    "@polkadot/extension-inject": "0.34.0-beta.12",
    "@polkadot/keyring": "^12.3.2",
    "@polkadot/react-identicon": "^3.6.5",
    "@polkadot/types": "^10.12.1",
    "@polkadot/types-known": "^10.12.6",
    "@polkadot/util": "^12.6.2",
    "@polkadot/util-crypto": "^12.6.2",
    "@sentry/react": "^7.104.0",
    "@talismn/connect-wallets": "^1.2.5",
    "babel-plugin-transform-import-meta": "^2.2.1",
    "classnames": "^2.5.1",
    "decimal.js": "^10.4.3",
    "i18next": "^23.10.0",
    "lottie-react": "^2.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.13",
    "react-helmet-async": "^2.0.4",
    "react-hot-toast": "^2.4.1",
    "react-i18next": "^14.0.5",
    "react-number-format": "^5.3.3",
    "react-router-dom": "^6.22.2",
    "vite-plugin-environment": "^1.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/eslint-parser": "^7.23.10",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@tanstack/eslint-plugin-query": "^5.20.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@types/react-lottie": "^1.2.10",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "autoprefixer": "^10.4.18",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "sass": "^1.71.1",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-mkcert": "^1.17.4",
    "vite-plugin-svgr": "^4.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
